{
  "name": "openclaw-enterprise-control-plane",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Phase 1 MVP: policy interception, approvals, audit logging, and model routing for OpenClaw",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "node --test --import tsx tests/**/*.test.ts",
    "lint": "tsc --noEmit",
    "smoke:portkey": "npm run build && ./scripts/portkey-smoke.sh",
    "smoke:plugin": "npm run build && ./scripts/plugin-smoke.sh",
    "pack:openclaw-plugin": "./scripts/pack-openclaw-plugin.sh"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
